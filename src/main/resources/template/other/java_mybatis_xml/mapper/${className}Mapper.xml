<#assign className = table.className>   
<#assign classNameLower = className?uncap_first>
<#assign prefix = "#{">
<#assign suffix = "}">
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${basepackage}.${subpackage}.mapper.${className}Mapper">
	<resultMap id="BaseResultMap" type="${basepackage}.${subpackage}.entity.${className}">
		<!--
		  WARNING - @code-generator.generated
		-->
		<#list table.columns as column>
			<#if column.pk>
		<id column="${column.sqlName}" jdbcType="${column.sqlType}" property="${column.columnNameLower}" />
			<#else>
		<result column="${column.sqlName}" jdbcType="${column.sqlType}" property="${column.columnNameLower}" />
			</#if>
		</#list>
	</resultMap>

	<select id="selectList" parameterType="${basepackage}.${subpackage}.entity.${className}" resultType="${classNameLower}">
	SELECT
	<#list table.columns as column>
	<#if column_index!=0>, </#if>${column.sqlName} as ${column.columnNameLower}
	</#list>
	FROM ${table.sqlName}
		<where>
		<#list table.columns as column>
		<#assign placeholder = "${prefix+column.columnNameLower+suffix}">
		<#if column.str><if test="${column.columnNameLower} !=null and ${column.columnNameLower} != '' "><#else><if test="${column.columnNameLower} !=null"></#if>
			AND ${column.sqlName} <#if column.str>LIKE "%"${placeholder}"%"<#else> = ${placeholder}</#if>
		</if>
		</#list>
		</where>
	</select>

</mapper>